START (accept) <-- the start state
    /: CHECK_START
    ': LITERAL_SINGLE
    ": LITERAL_DOUBLE
    other: PRINT

PRINT (accept)
    /: CHECK_START
    ': LITERAL_SINGLE
    ": LITERAL_DOUBLE
    other: PRINT

LITERAL_SINGLE (accept)
    ': PRINT
    other: LITERAL_SINGLE

LITERAL_DOUBLE (accept)
    ": PRINT
    other: LITERAL_DOUBLE

CHECK_START (accept)
    *: COMMENT
    ': LITERAL_SINGLE
    ": LITERAL_DOUBLE
    /: CHECK_START
    other: PRINT

COMMENT (reject)
    *: CHECK_END
    other: COMMENT

CHECK_END (reject)
    /: START
    *: CHECK_END
    other: COMMENT
